<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:paddingLeft="14dp" android:paddingRight="14dp" android:paddingTop="17dp"
    android:paddingBottom="5dp">
    <ImageView android:id="@+id/img_cat_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/food_ico"/>
    <TextView android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/img_cat_image"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:text=""
        android:layout_marginLeft="12dp"
        android:textStyle="bold"/>
    <TextView android:id="@+id/txtPostedOn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_toRightOf="@+id/img_cat_image"
        android:textSize="12sp"
        android:textColor="@color/grey_light"
        android:layout_marginLeft="12dp"
        android:text=""/>
    <TextView android:id="@+id/txtQty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPostedOn"
        android:layout_toRightOf="@+id/img_cat_image"
        android:textSize="18sp"
        android:textColor="@color/grey_dark"
        android:layout_marginLeft="12dp"
        android:text=""/>
    <TextView android:id="@+id/txtReceivedBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPostedOn"
        android:textSize="16sp"
        android:textColor="@color/green"
        android:layout_alignParentRight="true"
        android:text="fdgsadgds"/>
    <View android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtQty"
        android:layout_toRightOf="@+id/img_cat_image"
        android:background="@color/grey_divider"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="12dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/divider"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="12dp">
        <Button android:id="@+id/btnInterests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/interest_ico"
            android:text="10"
            android:textColor="@color/grey_light"
            android:layout_alignParentLeft="true"
            android:background="@null"/>
        <Button android:id="@+id/btnChat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/chat_ico"
            android:text="10"
            android:textColor="@color/grey_light"
            android:layout_centerInParent="true"
            android:background="@null"/>
        <Button android:id="@+id/btnCall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/call_ico"
            android:layout_alignParentRight="true"
            android:background="@null"/>
    </RelativeLayout>

</RelativeLayout>